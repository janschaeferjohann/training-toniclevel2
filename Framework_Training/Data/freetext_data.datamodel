      <Node data-type="TEXT"
            hierarchical="FLAT"
            multiple="false"
            name="Salutation_local"
            searchable="false">
         <Settings>
            <Validation allow-empty-value="true"
                        dialog-field=""
                        label=""
                        operator="ANY"
                        validation-type="ANY_VALUE">
               <Values/>
            </Validation>
            <Format>
               <Input/>
               <Output/>
            </Format>
            <Script>var Gender = $freetext_data.recipient.Partner.Salutation.toString();
var out = '';
var Language = '';

	if ($document.Metadata) {
		Language = $document.Metadata.DocumentLanguage.toString();
	}

switch (Language) {
case 'ENG':
	switch (Gender) {
	case 'M':
		out = 'Dear Mr ' + Surname;
		break;
	case 'F':
		out = 'Dear Ms ' + Surname;
		break;
	case 'D':
		out = 'Dear ' + Firstname + ' ' + Surname;
		break;
	default:
		out = 'Hello';
		break;
	}
	break;
default: 
	switch (Gender) {
	case 'M':
		out = 'Sehr geehrter Herr ' + Surname + ',';
		break;
	case 'F':
		out = 'Sehr geehrte Frau ' + Surname + ',';
		break;
	case 'D':
		out = 'Hallo ' + Firstname + ' ' + Surname + ',';
		break;
	default:
		out = 'Guten Tag,';
		break;
	}
	break;
}

out;</Script>
         </Settings>
      </Node>
      <Node data-type="TEXT"
            hierarchical="FLAT"
