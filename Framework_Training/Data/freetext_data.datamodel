      <Node data-type="DATETIME"
            hierarchical="FLAT"
            multiple="false"
            name="Date"
            searchable="false">
         <Settings>
            <Validation allow-empty-value="true"
                        dialog-field=""
                        label=""
                        operator="ANY"
                        validation-type="ANY_VALUE">
               <Values/>
            </Validation>
            <Format>
               <Input date-format="MMM d, yyyy h:mm:ss a"/>
               <Output date-format="dd.MM.yyyy HH:mm:ss"
